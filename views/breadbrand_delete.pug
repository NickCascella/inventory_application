extends layout

block content
  h1 #{title}: #{breadbrand.title}

  
  
    
  form(method='POST' action='' class="form")
    p Do you really want to delete this brand and all its associated breads?
    label(for='password') Password
    input#password(type='password' name='password' required="true")
    //- input#breadbrandid(type='hidden',name='breadbrandid', required='true', value=breadbrand._id )
    button(class='btn submit')(type='submit') Delete
    
  if errors
    ul
      for error in errors
        li!= error.msg